* {
  font-family: sans-serif;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  user-select: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
}

body {
  background-image: url(<%= image_path "back.jpg" %>);
}

.album-image-back {
  background-color: white;
}

#index, #about-app, #about-author, #image_form, #album_notes {
  margin: 10px auto;
}

#first {
  margin-top: 2em;
}

#canvas-row {
  max-width: 100%;
  margin-top: 2em;
}

#second {
  height: 700px;
}

#toolbar {
  padding: 10px;
  position: relative;
  width: 20%;
  top: 0;
  float: left;
  right: 0px;
  margin-left: 2em;
  background-color: #2f2f2f;
  color: white;
}

.button {
  cursor: pointer;
  margin-left: 0.4em;
}

#album_table {
  text-align: center;
}


#album_table img{
  height: 185px;
}

#rad {
  float: left;
}

canvas {
  margin-left: 4em;
  margin-bottom: 3em;
  background-color: white;
  cursor: pointer;
}